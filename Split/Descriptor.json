{
  "name": "Split",
  "author": "Alexandre Almeida",
  "version": "1.0.0",
  "description": "Script for spliting files by lines or bytes.",
  "documentation": [
  ],
  "setup": [
  ],
  "toolType": "splitting",
  "requiredMemory": 1024,
  "recommendedCpus": 1,
  "recommendedDiskSpace": 1,
  "commands": [
    {
      "name": "split",
      "command": "/Split/split.sh",
      "description": "Split",
      "priority": 1,
      "arguments": [
        {
          "name": "-l",
          "argumentType": "int",
          "isRequired": "false",
          "description": "Number of lines for each partition.",
          "argumentsComposer": "nameValuesSeparatedBySpace"
        },
        {
          "name": "-b",
          "argumentType": "int",
          "isRequired": "false",
          "description": "Number of bytes per output file.",
          "argumentsComposer": "nameValuesSeparatedBySpace"
        },
        {
          "name": "inputName",
          "argumentType": "file",
          "isRequired": "true",
          "description": "File that will be split.",
          "argumentsComposer": "valuesSeparatedBySpace"
        },
        {
          "name": "partitions",
          "argumentType": "int",
          "isRequired": "true",
          "description": "Number of partitions created.",
          "argumentsComposer": "valuesSeparatedBySpace"
        }
      ],
      "outputs": [
        {
          "name": "outputName",
          "description": "Name of each partition.",
          "outputType": "file_dependent",
          "value": "",
          "argument_name": "inputName"
        }
      ],
      "inputs": [
        {
          "name": "inputName",
          "description": "Name of the input file.",
          "inputType": "file_dependent",
          "value": "",
          "argument_name": "inputName"
        }
      ]
    }
  ]
}